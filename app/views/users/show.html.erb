<div class="row">
	<div class="col-md-3 col-sm-5">
		<div class="profile-avatar">
			<%= image_tag("user_image.jpg", size: "450", class: "profile-avatar-img img-responsive thumbnail") %>
		</div>

		<div class="list-group">
			<a href="#teams" class="list-group-item">
				<i class="fa fa-asterisk text-primary"></i> &nbsp;&nbsp;Teams

				<i class="fa fa-chevron-right list-group-chevron"></i>
			</a>

			<a href="#stats" class="list-group-item">
				<i class="fa fa-book text-primary"></i> &nbsp;&nbsp;Stats

				<i class="fa fa-chevron-right list-group-chevron"></i>
			</a>

			<% if current_user.id == @user.id %>
			<%= link_to(edit_user_registration_path, class: "list-group-item") do %>
				<i class="fa fa-gear text-primary"></i> &nbsp;&nbsp;Settings

				<i class="fa fa-chevron-right list-group-chevron"></i>
			<% end %>
			<% end %>
		</div>
	</div>

	<div class="col-md-6 col-sm-7">
		<h3><%= @user.full_name %></h3>
		<h5 class="text-muted"><%= @user.position %></h5>
		<hr>

		<p><%= link_to 'Send Message', root_path, class: "btn btn-primary" %></p>
		<hr>

		<ul class="icons-list">
			<li><i class="icon-li fa fa-envelope"></i> <%= @user.email %></li>
			<li><i class="icon-li fa fa-map-marker"></i> <%= @user.location %></li>
		</ul>

		
		<p><%= @user.bio %></p>

		<hr>

		<div class="heading-block">
			<h4>Teams</h4>
		</div>

		<div id="teams">
			<% @teams.each do |team| %>
				<div class="col-lg-6">
					<div class="tile dark-blue">
						<div>
							<h4><%= team.name %></h4>
							<small><%= team.location %></h4>
						</div>

						<div>
							<h5>Stats</h5>
							Record: 1 - 0
						</div>

					</div>
				</div>
			<% end %>
		</div>
		

	</div>

	<div class="col-md-3">
		<div class="heading-block">
			<h5>Stats</h5>
		</div>

		<table class="table keyvalue-table">
			<tbody>
				<tr>
					<td class="kv-key"><i class="fa fa-calendar kv-icon kv-icon-primary"></i> Games Played</td>
					<td class="kv-value">3 </td>
				</tr>
				<tr>
					<td class="kv-key"><i class="fa fa-trophy kv-icon kv-icon-secondary"></i> Overall Record</td>
					<td class="kv-value">2 - 1 </td>
				</tr>
			</tbody>
		</table>

		<div class="heading-block">
			<h5>Activity</h5>
		</div>

		<div class="well">

			<ul class="icons-list text-md">
				<li>
					<i class="icon-li fa fa-location-arrow"></i>
					<span class="first-name"><%= @user.first_name %></span> attended a game
					<br>
					<small>about 4 hours ago</small>
				</li>
				<li>
					<i class="icon-li fa fa-plus"></i>
					<span class="first-name"><%= @user.first_name %></span> joined a new team
					<br>
					<small>1 day ago</small>
				</li>
			</ul>
		</div>
	</div>
</div>