<div class="account-wrapper">
  <div class="account-body">
    <h3>Edit Game</h3>

    <%= form_for([@team, @game], class: "form account-form") do |f| %>
      <% if @game.errors.any? %>
        <% @game.errors.full_messages.each do |msg| %>
          <p><% msg %></p>
        <% end %>
      <% end %>
      <div class="form-group">
        <%= f.label :game_date %><br>
				<%= f.date_field :game_date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :start_time %>
        <%= f.time_field :start_time, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :end_time %>
        <%= f.time_field :end_time, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :opponent_name %>
				<%= f.text_field :opponent_name , class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :location %><br />
				<%= f.text_field :location, class: "form-control" %>
      </div>

      <% if @game.game_date < Time.current.to_date %>
      <div class="form-group">
        <h5>Score</h5>
				<%= f.label :team_score %> <%= f.number_field :team_score %><br>
				<%= f.label :opponent_score %> <%= f.number_field :opponent_score %>
			</div>
			<% end %>

      <div class="form-group">
        <%= f.submit "Update Game", class: "btn btn-secondary btn-block btn-lg" %>
      </div>
    <% end %>
  </div>

  <div class="account-footer">
    <%= link_to "Delete", [@team, @game], method: :delete, data: { confirm: "You sure?" }, class: "pull-left btn btn-primary btn-sm" %>

    <%= link_to "Cancel", :back, class: "pull-right btn btn-danger btn-sm" %>
  </div>
</div>

